{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "author": "Marc Fabregat",
    "blocks": [
      {
        "alignment": "left",
        "horizontal_offset": 0,
        "segments": [
          {
            "foreground": "#ffffff",
            "properties": {
              "alpine": "",
              "arch": "",
              "centos": "",
              "debian": "",
              "elementary": "",
              "fedora": "",
              "gentoo": "",
              "linux": "",
              "macos": "",
              "manjaro": "",
              "mint": "",
              "opensuse": "",
              "raspbian": "",
              "ubuntu": "",
              "windows": "",
              "wsl": "",
              "wsl_separator": " on "
            },
            "style": "diamond",
            "type": "os"
          },
          {
            "foreground": "#ffffff",
            "style": "plain",
            "type": "session"
          },
          {
            "background": "#0000ff",
            "foreground": "#ffffff",
            "leading_diamond": "",
            "powerline_symbol": "",
            "properties": {
              "prefix": "<#ffffff>  </>",
              "style": "agnoster_short",
              "enable_hyperlink": true,
              "folder_icon": "<#ffffff> </>",
              "folder_separator_icon": "<#ffffff> </>",
              "home_icon": " "
            },
            "style": "diamond",
            "trailing_diamond": "",
            "type": "path"
          },
          {
            "type": "poshgit",
            "style": "powerline",
            "powerline_symbol": "\uE0B0",
            "foreground": "#ffffff",
            "background": "#0077c2"
          },
          {
            "background": "#007800",
            "foreground": "#ffffff",
            "properties": {
              "always_enabled": false,
              "color_background": true,
              "display_exit_code": false,
              "error_color": "#b10029",
              "prefix": "<transparent></>"
            },
            "style": "diamond",
            "trailing_diamond": "",
            "type": "exit"
          }
        ],
        "type": "prompt",
        "vertical_offset": 0
      },
      {
        "alignment": "left",
        "newline": true,
        "segments": [
          {
            "foreground": "#FFEE58",
            "style": "plain",
            "type": "root"
          },
          {
            "foreground": "#007ACC",
            "properties": {
              "prefix": "",
              "text": "❯"
            },
            "style": "plain",
            "type": "text"
          }
        ],
        "type": "prompt"
      }
    ],
    "final_space": false
  }
  
